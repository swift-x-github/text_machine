          <% #will_paginate @texts  %>
            <% @readers.each do |reader| %>
              <tr>
                <td><%= reader.id %></td>
                <td><%=  reader.email %></td>
                 <td><%= reader.reader_materials_count %></td>
                
              </tr>
            <% end %>
          </tbody>
        </table>
